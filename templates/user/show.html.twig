{% extends 'layout.html.twig' %}
{% trans_default_domain 'user' %}

{% block title 'User'|trans %}

{% block header 'User'|trans %}

{% block content %}
    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'Enabled'|trans }}</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>{{ 'Roles'|trans }}</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">{{ 'Back to list'|trans }}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ 'Edit'|trans }}</a>
{% endblock %}
