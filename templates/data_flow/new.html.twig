{% extends 'data_flow/layout.html.twig' %}

{% block title %}{{ 'Create new flow'|trans }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12 bg-white">
            <div class="row py-1 py-md-3">
                <div class="col-6 col-md-auto">
                    <a href="{{ path('data_flow_index') }}"><i class="fal {{ iconClass('previous') }} fa-fw mr-2"></i>{{ 'Flows'|trans }}</a>
                </div>
                <div class="d-none d-md-block col-auto border-left">
                    <span class="text-gray-300">{{ 'Create new flow'|trans }}</span>
                </div>
            </div>
        </div>
    </div>
    <main role="main" class="row pt-3">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="h4">{% block header %}{{ 'Create new flow'|trans }}{% endblock %}</h1>
                </div>
            </div>
            {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        {{ form_widget(form) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {% if cancel_url is defined %}
                            <a class="btn btn-outline-secondary mr-md-3" href="{{ cancel_url }}">{{ cancel_label|default('Cancel'|trans) }}</a>
                        {% endif %}
                        <button class="btn btn-primary">{{ button_label|default('Create data flow') }}</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </main>


{% endblock %}
