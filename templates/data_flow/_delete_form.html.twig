{% trans_default_domain 'data_flow' %}

<form method="post" action="{{ path('data_flow_delete', {'id': data_flow.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data_flow.id) }}">
    <button class="btn text-danger pl-0"><i class="fal {{ iconClass('delete') }} fa-fw mr-2"></i>{{ 'Delete flow'|trans }}</button>
</form>
