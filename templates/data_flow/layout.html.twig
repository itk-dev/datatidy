{% extends "base.html.twig" %}
{% trans_default_domain 'data_flow_transforms' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('data_flow_transforms') }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 bg-white">
                <div class="row py-3">
                    <div class="col-auto">
                        <a href="{{ path('data_flow_index') }}"><i class="fas {{ iconClass('previous') }} fa-fw mr-2"></i>{{ 'Flows'|trans }}</a>
                    </div>
                    <div class="col-auto border-left">
                        <span class="text-gray-300">This flows name {#TODO: Get name from flow #}</span>
                        <span class="text-success ml-1">Saved 1m ago{#TODO: Show time since last save #}</span>
                    </div>
                    <div class="col-auto ml-auto z-index-1070">
                        {% block save_form %}{% endblock %}
                        <a data-toggle="collapse" href="#settingsDrawer" role="button" aria-expanded="false" aria-controls="settingsDrawer" title="Open flow settings"><i class="fas {{ iconClass('settings') }} fa-fw mr-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                </div>
            </div>
            {% endfor %}
        {% endfor %}
        <main role="main" class="row">
            <div class="col-12 bg-white">
                <h1 class="h4">{% block header %}{% endblock %}</h1>
            </div>
            {% block content %}{% endblock %}
        </main>
    </div>
    <div class="settings-drawer collapse col-12 col-md-3 bg-body shadow-lg pt-md-5" id="settingsDrawer">
        <p class="h6">{{ 'Flow settings'|trans }}</p>
        {% block settings_drawer %}{% endblock %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('data_flow_transforms') }}
{% endblock %}
