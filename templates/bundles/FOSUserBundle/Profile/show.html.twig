{% extends "layout.html.twig" %}

{% block title %}{{ app.user.username }}{% endblock %}

{% block main %}
    <h1>
        @{{ user.username }}
        <small class="text-muted">{{ user.email }}</small>
    </h1>

    <a class="btn btn-outline-secondary" href="{{ path('fos_user_profile_edit') }}" role="button">{{ 'profile.show.edit'|trans }}</a>

    <a class="btn btn-outline-secondary" href="{{ path('fos_user_change_password') }}" role="button">{{ 'profile.show.change_password'|trans }}</a>
{% endblock %}
