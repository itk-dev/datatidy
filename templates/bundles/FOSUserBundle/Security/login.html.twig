{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ 'security.login.title'|trans }}{% endblock %}

{% block body %}
    <main class="d-flex align-items-center min-vh-100" role="main">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col col-6">
                    {% if error %}
                        <div class="alert alert-danger error" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">{{ 'security.login.form.header'|trans }}</h1>

                    <form action="{{ path('fos_user_security_check') }}" method="post">

                        <div class="form-group">
                            <label for="username" class="sr-only">{{ 'security.login.form.username.label'|trans }}</label>
                            <input type="text" id="username" name="_username" class="form-control" placeholder="{{ 'security.login.form.username.placeholder'|trans }}" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="username" class="sr-only">{{ 'security.login.form.password.label'|trans }}</label>
                            <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'security.login.form.password.placeholder'|trans }}" required>
                        </div>

                        <div class="form-group">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on">
                                <label class="form-check-label" for="remember_me">
                                    {{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>

                            <a class="float-right" href="{{ path('fos_user_resetting_request') }}">{{ 'security.login.form.forgot_password'|trans }}</a>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        <button class="btn btn-primary btn-block" id="_submit" name="_submit" type="submit">{{ 'security.login.submit'|trans }}</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
