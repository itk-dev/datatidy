{% extends '@FOSUser/layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}
{% block page_title 'security.login.submit'|trans %}

{% block fos_user_content %}
<form action="{{ path('fos_user_security_check') }}" method="post" id="login-form">
  {% if error %}
    <div class="alert alert-danger" role="alert">
        {{ error.messageKey|trans(error.messageData, 'security') }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
  {% endif %}

<div class="bg-white rounded-lg shadow-sm">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    <div class="form-group border-bottom">
        <div class="d-flex">
            <div class="col-auto pr-0 form-icon">
                <i class="fas {{ iconClass('envelope') }} mr-2 fa-fw gray-300"></i>
            </div>
            <div class="col">
                <label for="username" class="control-label">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="" required="required"/>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="d-flex">
            <div class="col-auto pr-0 form-icon">
                <i class="fas {{ iconClass('lock') }} mr-2 fa-fw"></i>
            </div>
            <div class="col">
                <label for="password" class="control-label">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" value=""/>
            </div>
            <div class="col-3 border-left pt-3">
                <a href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot?'|trans }}</a>
            </div>
        </div>

    </div>
</div>


  <div class="form-group mt-3">
    <button type="submit" class="btn btn-primary btn-block" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
  </div>
</form>
{% endblock fos_user_content %}
