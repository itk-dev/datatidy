{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ 'resetting.reset.title'|trans }}{% endblock %}

{% block body %}
    <main class="d-flex align-items-center min-vh-100" role="main">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col col-6">
                    <h1 class="h3 mb-3 font-weight-normal">{{ 'resetting.request.form.header'|trans }}</h1>
                    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token})}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" type="submit">{{ 'resetting.reset.submit'|trans }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
